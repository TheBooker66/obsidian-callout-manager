{
	"exclude": ["dist/**/*", "src/**/*.test.ts", "src/test-util.ts"],
	"compilerOptions": {
		"lib": ["DOM", "ES5", "ES6", "ES7", "ES2017", "ES2018", "ES2019"],
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES2020",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"strict": true,
		"stripInternal": true,
		"noEmit": true,
		"paths": {
			"obsidian-callout-manager": ["./api"],
			"&callout": ["./api/callout"],
			"&callout-util": ["./src/callout-util"],
			"&callout-resolver": ["./src/callout-resolver"],
			"&callout-settings": ["./src/callout-settings"],
			"&plugin": ["./src/main"],
			"&plugin-settings": ["./src/settings"],
			"&ui/*": ["./src/ui/*"],
			"&color": ["./src/util/color"]
		}
	}
}
